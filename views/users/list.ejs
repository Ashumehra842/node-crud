<html>

<meta>
<title>swoole view</title>
</meta>

<body>

<table border="1" padding="1">
	<tr>
		<th colspan="5"><label>User List</label></th>
	</tr>
	<tr>
		<th colspan="5"><label>Login As: <%= name.toUpperCase() %>  <%= lname.toUpperCase() %></label></th>
		
	</tr>
	<tr>
		<th><label>S.No</label></th>
		<th><label>Name</label></th>
		<th><label>Last Name</label></th>
		<th><label>Email</label></th>
		<th><label>Action</label></th>
		
		
	</tr>
	<% data.forEach((item, index) => { %>
	
	<tr>
		<td><%= index +1 %></td>
		<td><%= item.name.toUpperCase() %></td>
		<td><%= item.fname.toUpperCase() %></td>
		<td><%= item.email %></td>
		<td><a href="/user/update/<%= item._id %>">Update</a> &nbsp;<a href="/user/delete/<%= item._id %>">Delete</a> &nbsp;<a href="/user/detail/<%= item._id %>">View</a></td>
	</tr>
	<% })	 %>
<tr>
<th><a href="/user/register/"><button>Create User</button></a></th>
</tr>
<tr>
<th colspan="5"><a href="/user/logout/"><button>Logout</button></a></th>
</tr>
</table>
</body>
</html>